<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="viewModel"
            type="com.damir.stipancic.newsappv3.ui.fragments.article_detail_screen.ArticleDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/article_detail_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:0.565"
                android:contentDescription="@string/article_detail_image"
                app:imageUrl="@{viewModel.selectedArticle.urlToImage}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/article_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold|italic"
            android:textAllCaps="true"
            tools:text="ARTICLE title"
            android:textColor="@color/black"
            android:text="@{viewModel.selectedArticle.title}"
            />

        <TextView
            android:id="@+id/article_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@{viewModel.selectedArticle.description}"/>

        <TextView
            android:id="@+id/article_detail_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:textSize="20sp"
            android:autoLink="web"
            android:text="@{viewModel.selectedArticle.url}"/>


    </LinearLayout>

</layout>