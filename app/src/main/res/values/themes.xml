<resources>
    <!-- Base application theme. -->
    <style name="Theme.NewsAppV3" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A30303</item>
        <item name="colorPrimaryVariant">#7C0101</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A30303</item>
        <item name="colorSecondaryVariant">#7C0101</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="fontFamily">@font/roboto</item>

    </style>

    <style name="Text.RecyclerItemTitle">
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:textSize">@dimen/recycler_item_title</item>
    </style>

    <style name="Text.ArticleTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/article_title</item>
    </style>

    <style name="Text.ArticleDescription">
        <item name="android:textColor">@color/article_description</item>
        <item name="android:textSize">@dimen/article_description</item>
    </style>
</resources>